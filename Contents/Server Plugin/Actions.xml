		<ConfigUI>
            <Field id="subject" type="textfield">
                <Label>Subject:</Label>
                <Description>email subject line</Description>
            </Field>
            <Field id="recipient" type="textfield">
                <Label>Recipient:</Label>
                <Description>recipient email address</Description>
            </Field>
		</ConfigUI>
